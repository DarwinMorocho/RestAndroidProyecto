<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ec.com.appmusic.CrearNuevaCancion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:text="@string/tituloCrearCancion"
        android:id="@+id/textView3"
        android:textColor="#0b0b0b"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombreCancion"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:id="@+id/textView5" />

    <EditText
        android:id="@+id/ETNombreCancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent_material_light"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/album"
        android:id="@+id/textView6"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/ETNombreCancion"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ETAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent_material_light"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/album"
        android:id="@+id/textView"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/ETNombreCancion"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ETAnio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="1990"
        android:maxLength="4"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="44dp" />


    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guardarCancion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonGuardarCancion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/anio"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Formato"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/cmbFormato"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmbFormato"
        android:layout_below="@+id/ETAnio"
        android:layout_alignStart="@+id/ETAnio"
        android:layout_marginTop="42dp" />

</RelativeLayout>
